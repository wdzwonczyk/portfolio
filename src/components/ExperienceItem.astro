---
import ProjectName from "./ProjectName.astro"
export interface Props {
	date: string;
	companyName: string;
	companyLogoSrc: string;
	jobTitle: string;
	tasks: string[];
}

const { companyName, jobTitle, date, tasks, companyLogoSrc } = Astro.props;
---
<div class="mt-8">
	<!-- Job experience items -->
	<div class="flex flex-col sm:flex-row items-start justify-between  ml-14 sm:ml-0">
		<div class="flex justify-start sm:justify-end sm:w-1/2">
			<!-- Date info on the left -->
			<div class="bg-blue-500 py-1 px-4 rounded-lg sm:mt-2 sm:mr-10">
				<p class="text-white">{date}</p>
			</div>
		</div>
		<!-- Dot on the left -->
		<div class="w-12 h-12 bg-gray-200 rounded-full flex justify-center items-center mt-4 sm:mt-0 absolute left-0 sm:left-1/2 transform sm:-translate-x-1/2 ml-0">
			<img
				src={companyLogoSrc}
				alt={`${companyName} logo`}
				class="w-8 h-8"
			/>
		</div>
		<!-- Experience item info on the right -->
		<div class="w-full sm:w-1/2 mt-2 sm:mt-0">
			<div class="shadow-md bg-white box-border p-4 rounded-2xl sm:ml-10 md:w-3/4">
				<h3 class="text-xl font-semibold">{companyName}</h3>
				<p class="text-gray-500">{jobTitle}</p>
				<ul class="list-disc ml-4">
					{tasks.map((task) => (
						<li>{task}</li>
					))}
				</ul>
			</div>
		</div>
	</div>
</div>
	
