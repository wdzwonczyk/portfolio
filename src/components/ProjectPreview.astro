---
import type { CollectionEntry } from 'astro:content';
import ProjectName from "./ProjectName.astro"
import ProjectTag from './ProjectTag.astro';

export interface Props {
	project: CollectionEntry<'work'>;
}

const { data, slug } = Astro.props.project;

//Specific styling
const projectBg = data.title === "Studiz" ?
	 "bg-gradient-to-tl from-sky-600 to-sky-500 hover:to-blue-400" 
	 : data.title === "RawShare" ? 
	 "bg-gradient-to-tl from-lime-600 to-lime-500 hover:to-lime-400" 
	 : data.title === "Slepfi" ? 
	 "bg-gradient-to-tl from-rose-600 to-rose-500 hover:to-rose-400"
	 : data.title === "Arla" ?
	 "bg-gradient-to-tl from-green-600 to-green-500 hover:to-green-400"
	 : data.title === "Apartament Diamond" ?
	 "bg-gradient-to-tl from-[#C68F6E] to-[#DDAA8A] hover:to-[#E8B494]"
	 : data.title === "WatchBuddy" ?
	 "bg-gradient-to-tl from-gray-600 to-gray-500 hover:to-gray-400"
	 : null;

const projectImageStyle = data.title === "Studiz" ?
	 "absolute min-w-1/3 max-w-[200px] -bottom-1/2 left-1/2 -translate-x-1/2" 
	 : data.title === "RawShare" ? 
	 "absolute min-w-1/3 max-w-[200px] -bottom-1/2 left-1/2 -translate-x-1/2" 
	 : data.title === "Slepfi" ? 
	 "absolute min-w-3/4 max-w-[78%] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
	 : data.title === "Arla" ?
	 "absolute min-w-3/4 max-w-[78%] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
	 : data.title === "Apartament Diamond" ?
	 "absolute min-w-3/4 max-w-[78%] top-3/4 left-1/2 -translate-x-1/2 -translate-y-3/4"
	 : data.title === "WatchBuddy" ? 
	 "absolute min-w-1/3 max-w-[200px] -bottom-1/2 left-1/2 -translate-x-1/2"
	 : null;
---
<a class={`w-full bg-green-700 overflow-hidden flex justify-center items-start relative rounded-2xl min-h-[300px] cursor-pointer duration-300 hover:shadow-md sm:basis-1/3 sm:flex-1 ${projectBg}`} href={`/portfolio/work/${slug}`}>
	<div>
		<ProjectName name={data.title}/>
		<ProjectTag tag={data.tagName}/>
		<img
			src={data.img}
			alt={data.img_alt}
			class={projectImageStyle}
		/>
	</div>
</a>